        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >
        <% for(let listing of allListing){%>
        <a class="listing-link" href="/listings/<%=listing._id%>">
        <div class="card" style="width: 20rem;">
            <img src="<%=listing.image.url%>" class="card-img-top"  style="height: 20rem;" alt="...">
            <div class="card-img-overlay">abcd</div>
            <div class="card-body">
                <p class="card-text">
                    <li><%=listing.title%></li>
                    <li>&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</li>
                </p> 
            </div>
        </div>
        </a>
        <%}%>
        </div>
    </ul>
</body>

